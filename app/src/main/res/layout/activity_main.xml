<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abdulqadeer.a935studentcontactsqliteLND.MainActivity">

    <TextView
        android:id="@+id/textRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#878087"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="@string/Records"
        android:textAlignment="center"
        android:textColor="#fbe4dada"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="5dp"
        android:rowCount="2">

        <Button
            android:id="@+id/view_student_main_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Students" />

        <Button
            android:id="@+id/view_test_main_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Tests" />


        <Button
            android:id="@+id/view_exam_main_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Exam" />

        <Button
            android:id="@+id/view_result_main_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:text="Result" />

    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Students" />

            <ListView
                android:id="@+id/students_record"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#0ff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tests" />

            <ListView
                android:id="@+id/tests_record"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#c8e7b2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Questions" />

            <ListView
                android:id="@+id/questions_record"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#edc0e7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exams" />

            <ListView
                android:id="@+id/exams_record"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#7596e9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Results" />

            <ListView
                android:id="@+id/results_record"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#e9ae89" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
