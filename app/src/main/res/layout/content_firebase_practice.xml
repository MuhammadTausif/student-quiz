<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FirebasePracticeActivity"
    tools:showIn="@layout/activity_firebase_practice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/userName_editText_firebasePractice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/email_editText_firebasePractice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:autofillHints="Password" />

        <Button
            android:id="@+id/addUser_button_firebasePractice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add User" />
        <Button
            android:id="@+id/sync_button_firebasePractice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>